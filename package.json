{
    "name": "sports-manager-api",
    "version": "0.0.1",
    "description": "A Node.js based API using the KOA REST library to server data from a MongoDB instance to a front-end application using JSON.",
    "main": "src/app.ts",
    "repository": "git@github.com:UMGC-SHELDZ/sports-manager-api.git",
    "author": "Scott Herold <sherold@mail.usf.edu>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "lint:prettier": "prettier --write --loglevel warn .",
        "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
        "start-dev": "nodemon nodemon.json src/app.ts",
        "start": "ts-node src/app.ts",
        "test": "NODE_ENV=test jest",
        "test-dev": "NODE_ENV=test npm-run-all lint:prettier & jest --watch-all --coverage"
    },
    "dependencies": {
        "config": "^3.3.8",
        "koa": "^2.13.4",
        "koa-body": "^6.0.1",
        "koa-pino-logger": "^4.0.0",
        "koa-router": "^12.0.0",
        "mongoose": "^6.7.2",
        "pino": "^8.7.0",
        "pino-pretty": "^9.1.1"
    },
    "devDependencies": {
        "@tsconfig/node17": "^1.0.2",
        "@types/config": "^3.3.0",
        "@types/jest": "^29.2.2",
        "@types/koa": "^2.13.5",
        "@types/koa-bodyparser": "^4.3.10",
        "@types/koa-router": "^7.4.4",
        "@types/lodash": "^4.14.188",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^18.11.9",
        "jest": "^29.3.1",
        "lodash": "^4.17.21",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.3",
        "ts-lint": "^4.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4"
    }
}
